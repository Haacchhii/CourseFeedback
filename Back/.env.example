# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost/course_feedback_db

# JWT Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (SMTP)
