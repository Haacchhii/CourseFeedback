# Environment Configuration File
# Copy this to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/course_feedback_db

# JWT Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Course Feedback System

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ML Model Paths
SVM_MODEL_PATH=models/svm_sentiment_model.pkl
VECTORIZER_PATH=models/tfidf_vectorizer.pkl
SCALER_PATH=models/feature_scaler.pkl

# Training Configuration
TRAINING_DATA_PATH=data/training_data.csv
MIN_TRAINING_SAMPLES=100